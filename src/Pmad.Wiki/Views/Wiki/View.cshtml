@model Pmad.Wiki.Models.WikiPageViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="wiki-page">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Wiki" asp-action="View" asp-route-id="">Wiki</a></li>
                @foreach (var crumb in Model.Breadcrumb.Take(Model.Breadcrumb.Count - 1))
                {
                    <li class="breadcrumb-item"><a asp-controller="Wiki" asp-action="View" asp-route-id="@crumb.PageName">@crumb.PageTitle</a></li>
                }
                <li class="breadcrumb-item active" aria-current="page">@Model.Breadcrumb.Last().PageTitle</li>
            </ol>
        </nav>
        <div class="btn-toolbar" role="toolbar">
            @if (Model.AvailableCultures.Count > 1)
            {
                <div class="btn-group me-2" role="group">
                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        @(Model.Culture ?? "Default")
                    </button>
                    <ul class="dropdown-menu">
                        @foreach (var culture in Model.AvailableCultures)
                        {
                            <li>
                                <a class="dropdown-item @(culture == Model.Culture ? "active" : "")" 
                                   asp-action="View" 
                                   asp-route-id="@Model.PageName" 
                                   asp-route-culture="@culture">
                                    @culture
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }
            <div class="btn-group" role="group">
                <a asp-action="SiteMap" class="btn btn-outline-secondary">
                    <i class="bi bi-map"></i> Site Map
                </a>
                <a asp-action="History" asp-route-id="@Model.PageName" asp-route-culture="@Model.Culture" class="btn btn-outline-secondary">
                    <i class="bi bi-clock-history"></i> History
                </a>
                @if (Model.CanEdit)
                {
                    <a asp-action="Edit" asp-route-id="@Model.PageName" asp-route-culture="@Model.Culture" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="wiki-content mb-5">
        @Html.Raw(Model.HtmlContent)
    </div>    
    
    @if (Model.LastModified.HasValue)
    {
        <div class="text-muted small">
            Last modified: @Model.LastModified.Value.ToString("f")
            @if (!string.IsNullOrEmpty(Model.LastModifiedBy))
            {
                <text>by @Model.LastModifiedBy</text>
            }
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/pmad-wiki/css/style.css" />
}
