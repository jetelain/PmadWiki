@model Pmad.Wiki.Models.WikiSiteMapViewModel
@{
    ViewData["Title"] = Localizer["Site Map"];
}

<div class="wiki-sitemap">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@Localizer["Site Map"]</h1>
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group" role="group">
                @if (Model.CanEdit)
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> @Localizer["Create New Page"]
                    </a>
                }
                <a asp-action="View" asp-route-id="@Model.HomePageName" class="btn btn-outline-secondary">
                    <i class="bi bi-house"></i> @Localizer["Home"]
                </a>
                @if (Model.CanAdmin)
                {
                    <a asp-action="AccessControl" class="btn btn-outline-secondary">
                        <i class="bi bi-shield-lock"></i> @Localizer["Access Control"]
                    </a>
                }
            </div>
        </div>
    </div>

    @if (!Model.RootNodes.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> @Localizer["No pages found."]
        </div>
    }
    else
    {
        <div class="wiki-sitemap-tree">
            @foreach (var node in Model.RootNodes)
            {
                @await Html.PartialAsync("_SiteMapNode", node)
            }
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/pmad-wiki/css/style.css" />
}
