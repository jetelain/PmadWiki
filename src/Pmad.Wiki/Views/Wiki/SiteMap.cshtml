@model Pmad.Wiki.Models.WikiSiteMapViewModel
@{
    ViewData["Title"] = "Site Map";
}

<div class="wiki-sitemap">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Site Map</h1>
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group" role="group">
                <a asp-action="View" asp-route-id="@Model.HomePageName" class="btn btn-outline-secondary">
                    <i class="bi bi-house"></i> Home
                </a>
                @if (Model.CanAdmin)
                {
                    <a asp-action="AccessControl" class="btn btn-outline-secondary">
                        <i class="bi bi-shield-lock"></i> Access Control
                    </a>
                }
            </div>
        </div>
    </div>

    @if (!Model.RootNodes.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No pages found. @(Model.CanEdit ? "Start by creating some pages!" : "")
        </div>
    }
    else
    {
        <div class="wiki-sitemap-tree">
            @foreach (var node in Model.RootNodes)
            {
                @await Html.PartialAsync("_SiteMapNode", node)
            }
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/pmad-wiki/css/style.css" />
}
