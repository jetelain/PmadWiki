@model Pmad.Wiki.Models.WikiSiteMapViewModel
@{
    ViewData["Title"] = "Site Map";
}

<div class="wiki-sitemap">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Site Map</h1>
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group" role="group">
                <a asp-action="View" asp-route-id="@Model.HomePageName" class="btn btn-outline-secondary">
                    <i class="bi bi-house"></i> Home
                </a>
            </div>
        </div>
    </div>

    @if (!Model.RootNodes.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No pages found. @(Model.CanEdit ? "Start by creating some pages!" : "")
        </div>
    }
    else
    {
        <div class="wiki-sitemap-tree">
            @foreach (var node in Model.RootNodes)
            {
                @await Html.PartialAsync("_SiteMapNode", node)
            }
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/pmad-wiki/css/style.css" />
    <style>
        .wiki-sitemap-tree {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sitemap-node {
            margin-left: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .sitemap-node.level-0 {
            margin-left: 0;
        }

        .sitemap-node-content {
            display: flex;
            align-items: center;
            padding: 0.25rem 0;
        }

        .sitemap-node-icon {
            margin-right: 0.5rem;
            color: #6c757d;
        }

        .sitemap-node-link {
            text-decoration: none;
            color: #0d6efd;
            font-weight: 500;
        }

        .sitemap-node-link:hover {
            text-decoration: underline;
        }

        .sitemap-node-folder {
            color: #212529;
            font-weight: 600;
        }

        .sitemap-node-meta {
            margin-left: 1rem;
            font-size: 0.875rem;
            color: #6c757d;
        }

        .sitemap-node-children {
            border-left: 2px solid #e9ecef;
            margin-left: 0.5rem;
            padding-left: 0;
        }
    </style>
}
