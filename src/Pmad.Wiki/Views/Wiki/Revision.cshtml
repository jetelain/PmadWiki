@model Pmad.Wiki.Models.WikiPageRevisionViewModel
@{
    ViewData["Title"] = Localizer["{0} (Revision)", Model.Title];
}

<div class="wiki-page">
<div class="alert alert-info mb-3">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <i class="bi bi-clock-history"></i>
            @Localizer[@"<strong>Viewing historical revision</strong> from {0:f} by {1}", Model.Timestamp, Model.AuthorName]
        </div>
        <div class="btn-group">
            @if (Model.CanEdit)
            {
                <a asp-action="Edit" 
                   asp-route-id="@Model.PageName" 
                   asp-route-culture="@Model.Culture"
                   asp-route-restoreFromCommit="@Model.CommitId"
                   class="btn btn-sm btn-warning"
                   title="@Localizer["Restore this version (opens in edit mode)"]">
                    <i class="bi bi-arrow-counterclockwise"></i> @Localizer["Restore This Version"]
                </a>
            }
            <a asp-action="View" asp-route-id="@Model.PageName" asp-route-culture="@Model.Culture" class="btn btn-sm btn-primary">
                <i class="bi bi-arrow-up"></i> @Localizer["View Current Version"]
            </a>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="mt-2">
            <small><strong>@Localizer["Commit message:"]</strong> @Model.Message</small>
        </div>
    }
</div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Wiki" asp-action="View" asp-route-id="">@Localizer["Wiki"]</a></li>
                @foreach (var crumb in Model.Breadcrumb.Take(Model.Breadcrumb.Count - 1))
                {
                    <li class="breadcrumb-item"><a asp-controller="Wiki" asp-action="View" asp-route-id="@crumb.PageName">@crumb.PageTitle</a></li>
                }
                <li class="breadcrumb-item active" aria-current="page">@Model.Breadcrumb.Last().PageTitle</li>
            </ol>
        </nav>
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group" role="group">
                <a asp-action="SiteMap" class="btn btn-outline-secondary">
                    <i class="bi bi-map"></i> @Localizer["Site Map"]
                </a>
                <a asp-action="History" asp-route-id="@Model.PageName" asp-route-culture="@Model.Culture" class="btn btn-outline-secondary">
                    <i class="bi bi-clock-history"></i> @Localizer["History"]
                </a>
                @if (Model.CanEdit)
                {
                    <a asp-action="Edit" asp-route-id="@Model.PageName" asp-route-culture="@Model.Culture" class="btn btn-outline-primary">
                        <i class="bi bi-pencil"></i> @Localizer["Edit Current"]
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="wiki-content mb-3">
        @Html.Raw(Model.HtmlContent)
    </div>    
    
    <div class="text-muted small">
        <strong>@Localizer["Revision:"]</strong> @Model.CommitId.Substring(0, Math.Min(8, Model.CommitId.Length))
        <span class="mx-2">|</span>
        <strong>@Localizer["Date:"]</strong> @Model.Timestamp.ToString("f")
        <span class="mx-2">|</span>
        <strong>@Localizer["Author:"]</strong> @Model.AuthorName
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/pmad-wiki/css/style.css" />
}
