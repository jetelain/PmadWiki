@model Pmad.Wiki.Models.WikiAccessControlViewModel
@{
    ViewData["Title"] = Localizer["Page Access Control Rules"];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1>
                <i class="bi bi-shield-lock"></i> @Localizer["Page Access Control Rules"]
            </h1>

            @if (!Model.IsEnabled)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @Localizer["Page-level permissions are currently disabled. Set <code>UsePageLevelPermissions = true</code> in WikiOptions to enable this feature."]
                </div>
            }

            <div class="mb-3">
                <a asp-action="EditAccessControl" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> @Localizer["Edit Rules"]
                </a>
                <a asp-action="SiteMap" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> @Localizer["Back to Site Map"]
                </a>
            </div>

            @if (Model.Rules.Count == 0)
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> @Localizer["No access control rules defined. All users have full access to all pages."]
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["Current Rules"]</h5>
                        <p class="text-muted small">
                            @Localizer["Rules are evaluated in order from top to bottom. The first matching rule determines access."]
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Order"]</th>
                                        <th>@Localizer["Pattern"]</th>
                                        <th>@Localizer["Read Groups"]</th>
                                        <th>@Localizer["Write Groups"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var rule in Model.Rules)
                                    {
                                        <tr>
                                            <td>@rule.Order</td>
                                            <td><code>@rule.Pattern</code></td>
                                            <td>
                                                @if(string.IsNullOrEmpty(rule.ReadGroups))
                                                {
                                                    <span class="text-muted">@Localizer["All users"]</span>
                                                }
                                                else
                                                {
                                                    @rule.ReadGroups
                                                }
                                            </td>
                                            <td>
                                                @if (string.IsNullOrEmpty(rule.WriteGroups))
                                                {
                                                    <span class="text-muted">@Localizer["All users"]</span>
                                                }
                                                else
                                                {
                                                    @rule.WriteGroups
                                                }                                           
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["Pattern Syntax"]</h5>
                        <ul>
                            <li><code>*</code> - @Localizer["Matches any characters except / (within a single path segment)"]</li>
                            <li><code>**</code> - @Localizer["Matches any characters including / (across path segments)"]</li>
                            <li><code>admin/**</code> - @Localizer["Matches all pages under the admin directory"]</li>
                            <li><code>Home</code> - @Localizer["Matches exactly the Home page"]</li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
